<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D7878"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
    android:id="@+id/singInEmailEditTextId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
    android:hint="Email"
    android:textColor="#ffffff"
    android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/singInPasswordEditTextId"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/buttonSinId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing In"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff22"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Are you not registered ? Sing In "/>

    <ProgressBar
        android:id="@+id/progressBerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>




</LinearLayout>