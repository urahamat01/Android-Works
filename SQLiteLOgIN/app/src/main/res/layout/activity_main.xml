<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="6dp"
    android:background="#558AB4"
    tools:context=".MainActivity">

    //34 video

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        >

        <TextView
            android:id="@+id/usernameSingInTVID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName :"
            android:textSize="18sp"
            android:textAllCaps="false"/>

        <EditText
            android:id="@+id/usernameSingInETID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:hint="User Name"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/passwordSingInTVID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:textSize="18sp"
            android:textAllCaps="false"/>

        <EditText
            android:id="@+id/passwordSingInETID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:hint="Password"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >

      <Button
          android:id="@+id/singInBtn1Id"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Sing In"
          android:background="#111435"
          android:textColor="#ffffff"
          android:layout_marginTop="15dp"
          android:textSize="18sp"/>

        <Button
            android:id="@+id/singupBtn1Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sing Up"
            android:textColor="#ffffff"
            android:background="#111435"
            android:layout_marginTop="15dp"
            android:textSize="18sp"/>


    </LinearLayout>


</LinearLayout>