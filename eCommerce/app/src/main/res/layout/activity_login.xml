<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        tools:context=".LoginActivity">

    <ImageView
            android:id="@+id/login_applogo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@drawable/applogo"/>


    <TextView
            android:id="@+id/login_phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_applogo"
            android:background="@drawable/input_design"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Phone Number"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/login_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_phone_number_input"
            android:background="@drawable/input_design"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:hint="Password"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:textStyle="bold"/>

    <LinearLayout
            android:id="@+id/liner_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/login_password_input"
            android:layout_marginTop="5dp">
        <CheckBox
                android:id="@+id/reminder_me_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:text="Remember me?"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="17dp"
        />
        <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget Password"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="80dp"/>


    </LinearLayout>


    <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner_layout_1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button"
            android:padding="17dp"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:text="Login"
            android:textColor="@color/colorWhite"/>

    <TextView
            android:id="@+id/admin_panal_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm am Admin?"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/login_btn"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="80dp"
            android:layout_marginEnd="20dp"/>

    <TextView
            android:id="@+id/not_admin_panal_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm not am Admin?"
            android:layout_alignParentStart="true"
            android:layout_below="@id/login_btn"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="20dp"
            android:visibility="invisible"/>


</RelativeLayout>
